<Window x:Class="mst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mst"
        mc:Ignorable="d"
        Title="M.S.T Algorithm" Height="700" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="canvas1" HorizontalAlignment="Left" Height="100" 
                Margin="10,10,0,0" VerticalAlignment="Top" 
                Width="100" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Button x:Name="Generator" Content="Generator" 
                Margin="10,5" Grid.Row="1" Grid.Column="0" Click="Generator_btn"/>
        <Button x:Name="primbtn" Content="Prim" 
                Margin="10,5" Grid.Row="1" Grid.Column="1" Click="PrimAlgorithm_btn"/>
        <Button x:Name="kruskalbtn" Content="Kruskal" 
                Margin="10,5" Grid.Row="1" Grid.Column="2" Click="KruskalAlgorithm_btn"/>
    </Grid>
</Window>
